<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="index"
		template="/WEB-INF/views/layout/layout-dispatcher.jsp">
		<put-attribute name="title" value="index" />
		<put-attribute name="body"
			value="/WEB-INF/views/jsp/user/index/_home.jsp" />
		<put-attribute name="header"
			value="/WEB-INF/views/layout/header.jsp" />
		<put-attribute name="banner"
			value="/WEB-INF/views/layout/banner.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/layout/footer.jsp" />
	</definition>
	<!-- HOME PAGE -->
	<definition name="home" extends="index">
		<put-attribute name="title" value="home" />
		<put-attribute name="body"
			value="/WEB-INF/views/jsp/user/home.jsp" />
	</definition>
	<!-- LOGIN PAGE -->
	<definition name="login" extends="index">
		<put-attribute name="title" value="index" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/user/index/_login.jsp" />		
	</definition>
	<!-- SIGN UP PAGE -->
	<definition name="signUp" extends="index">
		<put-attribute name="title" value="index" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/user/index/_register.jsp" />		
	</definition>
	
	<!-- ADMIN PAGE -->
	<definition name="dashboard"
		template="/WEB-INF/views/layout/admin/admin-layout.jsp">
		<put-attribute name="title" value="dashboard" />
		<put-attribute name="header"
			value="/WEB-INF/views/layout/admin/header.jsp" />
		<put-attribute name="menu"
			value="/WEB-INF/views/layout/admin/menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/admin/dashboard/index/_dashboard.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/layout/admin/footer.jsp" />
	</definition>
	
	<!-- PRODUCT PAGE -->
	<definition name="product-list" extends="dashboard">
		<put-attribute name="title" value="dashboard" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/admin/product/index/_list.jsp" />
	</definition>
	
	<!-- PRODUCT INSERT -->
	<definition name="product-insert" extends="dashboard">
		<put-attribute name="title" value="dashboard" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/admin/product/index/_insert.jsp" />
	</definition>
	
	<!-- PRODUCT TYPE -->
	<definition name="productType-list" extends="dashboard">
		<put-attribute name="title" value="dashboard" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/admin/productType/index/_list.jsp" />
	</definition>
	
	<!-- PRODUCT TYPE INSERT -->
	<definition name="productType-insert" extends="dashboard">
		<put-attribute name="title" value="dashboard" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/admin/productType/index/_insert.jsp"/>	
	</definition>
	
	<!-- PRODUCT TYPE UPDATE -->
	<definition name="productType-update" extends="dashboard">
		<put-attribute name="title" value="dashboard" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/admin/productType/index/_update.jsp"/>	
	</definition>
</tiles-definitions>