<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="index"
		template="/WEB-INF/views/layout/layout-dispatcher.jsp">
		<put-attribute name="title" value="index" />
		<put-attribute name="body"
			value="/WEB-INF/views/jsp/user/index/_home.jsp" />
		<put-attribute name="header"
			value="/WEB-INF/views/layout/header.jsp" />
		<put-attribute name="banner"
			value="/WEB-INF/views/layout/banner.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/layout/footer.jsp" />
	</definition>
	<!-- HOME PAGE -->
	<definition name="home" extends="index">
		<put-attribute name="title" value="home" />
		<put-attribute name="body"
			value="/WEB-INF/views/jsp/user/home.jsp" />
	</definition>
	<!-- LOGIN PAGE -->
	<definition name="login" extends="index">
		<put-attribute name="title" value="index" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/user/index/_login.jsp" />		
	</definition>
	<!-- SIGN UP PAGE -->
	<definition name="signUp" extends="index">
		<put-attribute name="title" value="index" />
		<put-attribute name="body" value="/WEB-INF/views/jsp/user/index/_register.jsp" />		
	</definition>
</tiles-definitions>